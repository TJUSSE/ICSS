<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SSE\ICSSBundle\Entity\RecruitApplyArchive" table="recruit_apply_archive">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="at" type="datetime" column="at" nullable="true"/>
        <field name="file" type="string" column="file" length="128" nullable="true"/>
        <many-to-one field="apply" target-entity="RecruitApply">
            <join-column name="apply_id" referenced-column-name="id"/>
        </many-to-one>
        <many-to-one field="archive" target-entity="InternArchive">
            <join-column name="archive_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
