<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SSE\ICSSBundle\Entity\Direction" table="direction">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" column="name" length="64" nullable="true"/>
        <many-to-one field="project" target-entity="Project">
            <join-column name="project_id" referenced-column-name="id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>
