<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="SSE\ICSSBundle\Entity\InternType" table="intern_type">
        <id name="id" type="integer" column="id">
            <generator strategy="IDENTITY"/>
        </id>
        <field name="name" type="string" column="name" length="64" nullable="true"/>
        <field name="approve" type="boolean" column="approve" nullable="true"/>
        <many-to-many field="availableArchives" target-entity="InternArchive">
            <join-table name="intern_types_archives">
                <join-columns>
                    <join-column name="intern_type_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="archive_type" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
        <many-to-many field="suitableProjects" target-entity="Project">
            <join-table name="intern_types_projects">
                <join-columns>
                    <join-column name="intern_type_id" referenced-column-name="id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="project_id" referenced-column-name="id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>
    </entity>
</doctrine-mapping>
