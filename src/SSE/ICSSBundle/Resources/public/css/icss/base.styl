html, body
  height: 100%
  margin: 0

h1, h2, h3, h4, h5, body, input, select, button
  font-weight: normal
  font-family: "Open Sans", Tahoma, arial, "Hiragino Sans GB", "Hiragino Sans GB W3", STHeiti, "Microsoft YaHei", sans-serif

body, input, select, button
  font-size: 16px

.body-base-html
  background: #F0F0F0

.body-base-html, .body-simple-html
  color: #444

a, a:visited, a:active
  color: $primary
  text-decoration: none

a:hover
  color: lighten($primary, 20%)
  text-decoration: underline

.container
  min-height: 100%
  box-sizing: border-box
  position: relative
  padding-top: 50px
  display: flex
  flex-direction: column

.page
  width: 1000px
  margin: 0 auto

.header
  padding: 40px 0

.header-right
  margin-top: 20px

.header-button
  display: inline-block
  padding: 10px 20px
  line-height: 20px
  transition: background-color .2s linear
  cursor: pointer

.header-button:hover
  background: $primary
  color: #FFF

.nav
  position: fixed
  left: 0
  width: 100%
  height: 50px
  top: 0
  background: rgba(#000, 0.7)

.main
  flex: 1
  display: flex

  .page
    display: flex

.header__icon
  width: 431px
  height: 96px

.list
  flex: 1
  & > h2
    margin-top: 0
    font-size: 40px
    color: #AAA

.detail
  flex: 1

.list--item
  font-size: 13px
  border-bottom: 1px dotted rgba(#000, 0.1)
  padding: 10px
  display: flex
  flex-direction: row
  &:hover
    background: rgba(#000, 0.05)

.list--full
  flex: 1

.role-login
  color: #FFF
  input
    color: #FFF

.text
  border: 1px solid #CCC
  outline: 0

.button, .button:visited
  display: inline-block
  padding: 5px 20px
  background: #E0E0E0
  color: #222
  border: 0
  transition: background .2s linear

  &:hover
    background: $primary
    color: #FFF
    text-decoration: none
