.form--login
  width: 200px

.form--login .textbox
  box-sizing: border-box
  line-height: 20px
  padding: 5px 15px
  outline: 0
  border: 1px solid rgba(#FFF, 0.4)
  background: none
  font-size: 12px
  width: 200px

  &:hover
    border-color: rgba(#FFF, 0.6)

  &:focus
    border-color: rgba(greenyellow, 0.6)

.form--login .username
  border-radius: 6px 6px 0 0

.form--login .password
  border-radius: 0 0 6px 6px
  margin-top: -1px

.form--login .form--line
  text-align: center
  margin: 10px 0

.form--login .form--line a
  line-height: 30px
  font-size: 13px
  margin: 0 10px

.form--login .login-failed-notice
  font-size: 13px
  text-align: center
  margin-top: 0

.form--login button
  outline: 0
  box-sizing: border-box
  line-height: 20px
  padding: 5px 30px
  border-radius: 15px
  border: 1px solid #6A835E
  background: none
  color: #FFF
  display: inline-block
  margin: 0
  font-size: 13px
  transition: background-color .2s ease-in-out
  &:hover
    background: #6A835E

.role-login
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  visibility: hidden
  transition: visibility 0s linear 0.5s
  &.show
    visibility: visible
    transition-delay: 0s

.login-sso-iframe, .login-native-iframe
  width: 200px
  height: 200px

.dialog-mask
  position: absolute
  z-index: 9999
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: rgba(#000, 0.9)
  opacity: 0
  transition: opacity .5s linear
  &.show
    opacity: 1

.dialog-login-sso, .dialog-login-native
  width: 300px
  position: absolute
  z-index: 10000
  transform: translateX(-50%) translateY(-80%) scale(0.4)
  left: 50%
  top: 50%
  opacity: 0
  visibility: hidden
  transition: transform .5s, opacity .5s, visibility 0s linear 0.5s
  transition-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1)

  &.show
    transform: translateX(-50%) translateY(-50%)
    opacity: 1
    visibility: visible
    transition-delay: 0s

  h2
    text-align: center

  iframe
    margin: 0 50px

.form--login--spinner
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  svg
    position: absolute
    left: 50%
    top: 40%
    transform: translateX(-50%) translateY(-50%)