{% extends "SSEICSSBundle::dynamic.html.twig" %}
{% block title %}实习就业服务系统{% endblock %}
{% block basebodyclass %}body-index{% endblock %}
{% block body %}
    <div class="index">
        <div class="index-row">
            <div class="index__news">
                <div class="index__news--images"><img src="{{ asset('bundles/sseicss/img/01.jpg') }}"></div>
                <div class="index__news--desc">我院毕业生在微软公司的合影</div>
            </div>
            <div class="index__pad"></div>
            <div class="index__recruits">
                {% for recruit in recruit_service.listRecruits(1, 9).list %}
                    <div class="index__recruits--item"><span class="date">[{{ recruit.publishAt|date("Y-m-d") }}]</span>
                        <a href="{{ path('recruitDetail', {'id': recruit.id}) }}">{{ recruit.title }}</a></div>
                {% endfor %}
            </div>
            <div class="index__recruits--more"><a href="{{ path('recruitList', {'page': 1}) }}" target="_self">MORE</a>
            </div>
        </div>
    </div>
{% endblock %}